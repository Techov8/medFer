<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="@drawable/slider_background">

    <TextView
        android:id="@+id/grid_product_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/find_doctor_by_speciality"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/grid_product_layout_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid_product_layout_title"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:text="@string/book_appointments_from_home"
        android:textColor="#000000"
        android:textSize="14sp" />

    <GridView
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="523dp"
        android:layout_below="@id/grid_product_layout_title2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:horizontalSpacing="1dp"
        android:numColumns="3"
        android:verticalSpacing="1dp">

    </GridView>

</RelativeLayout>